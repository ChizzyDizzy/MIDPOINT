# SafeMind AI - Hugging Face Configuration
# Copy this file to .env and add your actual API keys

# Hugging Face Configuration
# Get FREE API key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_key_here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Alternative models:
# HUGGINGFACE_MODEL=facebook/blenderbot-400M-distill
# HUGGINGFACE_MODEL=google/flan-t5-base
# HUGGINGFACE_MODEL=./your-trained-model-path

# AI Backend (use 'huggingface' for API or 'local' for offline models)
AI_BACKEND=huggingface

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# Safety Configuration
CRISIS_DETECTION_THRESHOLD=0.7
ENABLE_AI_RESPONSES=True

# Cultural Settings
DEFAULT_CULTURE=south_asian
