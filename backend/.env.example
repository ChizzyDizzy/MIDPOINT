# SafeMind AI - Configuration
# Copy this file to .env and add your actual API keys

# ============================================================
# AI Backend - Choose ONE:
# ============================================================
# Option 1: OpenAI (ChatGPT) - RECOMMENDED for best responses
AI_BACKEND=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Option 2: Hugging Face API (FREE but lower quality)
# AI_BACKEND=huggingface
# HUGGINGFACE_API_KEY=your_huggingface_key_here
# HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Option 3: Local trained model (offline, requires training first)
# AI_BACKEND=local
# HUGGINGFACE_MODEL=./safemind-trained-model

# Option 4: Template-based responses (no API needed)
# AI_BACKEND=fallback

# ============================================================
# Flask Configuration
# ============================================================
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# ============================================================
# Safety Configuration
# ============================================================
CRISIS_DETECTION_THRESHOLD=0.7
ENABLE_AI_RESPONSES=True

# Cultural Settings
DEFAULT_CULTURE=south_asian
